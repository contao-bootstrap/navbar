<?xml version="1.0"?>
<psalm
        errorLevel="3"
        hideExternalErrors="true"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="https://getpsalm.org/schema/config"
        xsi:schemaLocation="https://getpsalm.org/schema/config https://getpsalm.org/schema/config"
>
    <projectFiles>
        <directory name="src"/>
    </projectFiles>

    <issueHandlers>
        <UndefinedMagicPropertyFetch>
            <errorLevel type="suppress">
                <referencedProperty name="Contao\ModuleModel::$bs_navbarModules"/>
                <referencedProperty name="Contao\ModuleModel::$bs_inNavbar"/>
                <referencedProperty name="Contao\ModuleModel::$bs_isResponsive"/>
                <referencedProperty name="Contao\ModuleModel::$bs_toggleableSize"/>
            </errorLevel>
        </UndefinedMagicPropertyFetch>
        <UndefinedMagicPropertyAssignment>
            <errorLevel type="suppress">
                <referencedProperty name="Contao\ModuleModel::$bs_inNavbar"/>
            </errorLevel>
        </UndefinedMagicPropertyAssignment>
    </issueHandlers>

    <universalObjectCrates>
        <class name="Contao\FrontendTemplate"/>
    </universalObjectCrates>
</psalm>
